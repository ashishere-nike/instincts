<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_top"
        android:background="#F62459">

        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_ab_up_white"
            android:id="@+id/back"
            android:onClick="goBack"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="Events"
            android:textSize="24sp"
            android:textColor="#ffffff"
            />



    </LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/folderback722"

    tools:context=".EventActivity">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/child1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild1_1"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="proshow" />

                <TextView
                    android:id="@+id/showchild1_1"
                    style="@style/CardTitle"
                    android:text="Dance" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild1_2"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="elan" />

                <TextView
                    android:id="@+id/showchild1_2"
                    style="@style/CardTitle"
                    android:text="Music" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild2_1"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="choreo" />

                <TextView
                    android:id="@+id/showchild2_1"
                    style="@style/CardTitle"
                    android:text="Fine Arts" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild2_2"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="dj" />

                <TextView
                    android:id="@+id/showchild2_2"
                    style="@style/CardTitle"
                    android:text="Saaral Tamil Mandram" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild3_1"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="rof" />

                <TextView
                    android:id="@+id/showchild3_1"
                    style="@style/CardTitle"
                    android:text="Quiz" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild3_2"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="saaral" />

                <TextView
                    android:id="@+id/showchild3_2"
                    style="@style/CardTitle"
                    android:text="English Literary Events" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild4_1"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="game" />

                <TextView
                    android:id="@+id/showchild4_1"
                    style="@style/CardTitle"
                    android:text="Gaming" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild4_2"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="informals" />

                <TextView
                    android:id="@+id/showchild4_2"
                    style="@style/CardTitle"
                    android:text="Informals" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild5_1"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="map" />

                <TextView
                    android:id="@+id/showchild5_1"
                    style="@style/CardTitle"
                    android:text="Photography" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:id="@+id/cardchild5_2"
                style="@style/Card"
                card_view:cardUseCompatPadding="true">

                <include
                    layout="@layout/card_photo"
                    android:transitionName="bus" />

                <TextView
                    android:id="@+id/showchild5_2"
                    style="@style/CardTitle"
                    android:text="Lights Out Please" />

            </android.support.v7.widget.CardView>
        </LinearLayout>



    </LinearLayout>

    </ScrollView>

</LinearLayout>